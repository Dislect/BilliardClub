@model List<BilliardClub.Models.Order>

<div class="order__history__block">
    <h1> История заказов </h1>
    <div class="center">
        <table class="table">
            <thead>
            <tr>
                <th> Дата заказа </th>
                <th> Забронированные столы </th>
                <th> Заказанная еда / напитки </th>
                <th> Сумма заказа </th>
            </tr>
            </thead>
            <tbody style="color: antiquewhite">
            @foreach (var order in Model)
            {
                <tr>
                    <td> @order.orderDate.ToString("D") </td>
                    <td>
                        @if (order.poolTables.Count != 0)
                        {
                            foreach (var orderPoolTable in order.poolTables)
                            {
                                <p>Стол №@orderPoolTable.poolTable.name (@orderPoolTable.quantity ч.)</p> 
                            }
                        }
                        else
                        {
                            <p>-</p>
                        }
                    </td>
                    <td>
                        @if (order.foodItems.Count != 0)
                        {
                            foreach (var orderFoodItem in order.foodItems)
                            {
                                <p>@orderFoodItem.foodItem.title (@orderFoodItem.quantity шт.)</p> 
                            }
                        }
                        else
                        {
                            <p>-</p>
                        }
                    </td>
                    <td> @order.cheque руб.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>